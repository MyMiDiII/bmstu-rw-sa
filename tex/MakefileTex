.PHONY : build move

texReport : build move

build : report.tex
	pdflatex -shell-escape report.tex
	biber report
	pdflatex -shell-escape report.tex
	pdflatex -shell-escape report.tex

move : report.pdf
	-mkdir ../pdf           
	mv report.pdf ../pdf/ 
	-mkdir ../out        
	-mv *.aux *.log *.bbl *.blg *.dvi *.out *.toc *.bcf *.run.xml ../out/ 

clear :
	-rm -rf ../out/ ../pdf/
	-rm *.aux *.log *.bbl *.blg *.dvi *.out *.pdf *.toc *.bcf *.run.xml
